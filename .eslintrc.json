{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", 140],
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
